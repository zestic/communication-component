<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.0/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         cacheDirectory=".phpunit.cache">
  <testsuites>
    <testsuite name="Unit">
      <directory>tests/Unit</directory>
    </testsuite>
    <testsuite name="Integration">
      <directory>tests/Integration</directory>
    </testsuite>
  </testsuites>
  <coverage>
    <report>
      <clover outputFile="coverage.xml"/>
      <html outputDirectory="coverage" lowUpperBound="35" highLowerBound="70"/>
      <text outputFile="php://stdout" showUncoveredFiles="false"/>
    </report>
  </coverage>
  <source>
    <include>
      <directory suffix=".php">src</directory>
    </include>
  </source>
  <php>
    <env name="DB_HOST" value="localhost"/>
    <env name="DB_NAME" value="communication_test"/>
    <env name="DB_USER" value="postgres"/>
    <env name="DB_PASSWORD" value="postgres"/>
    <env name="DB_PORT" value="5432"/>
    <env name="POSTGRES_SCHEMA" value="communication_component"/>

    <!-- PostgreSQL test configuration for integration tests -->
    <env name="POSTGRES_TEST_HOST" value="localhost"/>
    <env name="POSTGRES_TEST_DB" value="communication_test"/>
    <env name="POSTGRES_TEST_USER" value="postgres"/>
    <env name="POSTGRES_TEST_PASSWORD" value="postgres"/>
    <env name="POSTGRES_TEST_PORT" value="5432"/>
    <env name="POSTGRES_TEST_SCHEMA" value="communication_component"/>
  </php>
</phpunit>
