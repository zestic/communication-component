{
  "name": "zestic/communication-component",
  "type": "library",
  "description": "Communication component for Laminas using Symfony Messenger and Notifier",
  "keywords": [],
  "license": "MIT",
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^8.3",
    "iampersistent/config-value-component": "^1.2",
    "justinrainbow/json-schema": "^5.2",
    "laminas/laminas-servicemanager": "^4.0.0-rc1",
    "mezzio/mezzio-twigrenderer": "^2.6",
    "netglue/laminas-messenger": "^2.0",
    "psr/container": "^1.0 || ^2.0",
    "robmorgan/phinx": "^0.15.4 || ^0.16",
    "symfony/dependency-injection": "^6.4 || ^7.0",
    "symfony/event-dispatcher": "^6.4 || ^7.0",
    "symfony/mailer": "^6.4 || ^7.0",
    "symfony/messenger": "^6.4 || ^7.0",
    "symfony/notifier": "^6.4 || ^7.0",
    "symfony/property-access": "^6.4 || ^7.0",
    "symfony/serializer": "^6.4 || ^7.0",
    "symfony/twig-bridge": "^6.4 || ^7.0",
    "symfony/yaml": "^6.4 || ^7.0",
    "twig/inky-extra": "^3.1",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75",
    "mockery/mockery": "^1.6",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.5",
    "symfony/amazon-mailer": "^6.4 || ^7.0",
    "symfony/dotenv": "7.3.x-dev",
    "symfony/var-dumper": "^6.4 || ^7.0"
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "stan": "phpstan analyse -l max src tests",
    "cs-check": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --dry-run --diff",
    "cs-fix": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix",
    "check": [
      "@cs-check",
      "@stan",
      "@test"
    ]
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Communication\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Fixture\\": "tests/_support/Fixture",
      "Tests\\Functional\\": "tests/functional",
      "Tests\\Integration\\": "tests/Integration",
      "Tests\\Unit\\": "tests/unit"
    }
  }
}
